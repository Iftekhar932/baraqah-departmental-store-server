{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/src/routes/api/$1" },
    {
      "source": "/register",
      "destination": "/src/controllers/registerController.js"
    },
    {
      "source": "/login",
      "destination": "/src/controllers/loginController.js"
    },
    {
      "source": "/passwordReset",
      "destination": "/src/controllers/forgotPasswordController.js"
    },
    {
      "source": "/jsonWebAccessToken",
      "destination": "/src/controllers/tokenGeneratorController.js"
    },
    { "source": "/(.*)", "destination": "/src/index.js" }
  ]
}
