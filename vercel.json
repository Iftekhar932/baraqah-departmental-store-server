{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/routes/api"
    },
    {
      "source": "/(login|register|forgotpassword)",
      "destination": "/routes/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.js"
    }
  ]
}
